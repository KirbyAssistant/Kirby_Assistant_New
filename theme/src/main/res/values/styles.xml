<resources>

    <declare-styleable name="nocropper__CropperView">
        <attr name="nocropper__grid_color" format="color"/>
        <attr name="nocropper__grid_thickness" format="dimension"/>
        <attr name="nocropper__grid_opacity" format="float"/>
        <attr name="nocropper__padding_color" format="color"/>
        <attr name="nocropper__add_padding_to_make_square" format="boolean"/>
        <attr name="nocropper__fit_to_center" format="boolean"/>
    </declare-styleable>

    <style name="OMGDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseLightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="color_view_background">@android:color/white</item>
        <item name="color_windows_background">#FFF5F5F5</item>
        <item name="text_high">@color/light_text_high</item>
        <item name="text_medium">@color/light_text_medium</item>
        <item name="text_hint">@color/light_text_hint</item>
        <item name="text_error">@color/light_text_error</item>
        <item name="btn_text_color">@color/light_btn_text_color</item>
        <item name="icon_color">#FF202020</item>
        <item name="toolbar_theme">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="toolbar_icon_color">#FFFEFEFE</item>
        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>
        <item name="android:textColorSecondary">?attr/text_medium</item>
        <item name="android:textColorPrimary">?attr/text_high</item>
        <item name="alertDialogTheme">@style/LightAlertDialog</item>
    </style>

    <style name="TransperantToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="BaseDarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">#FF000000</item>
        <item name="color_view_background">#FF121212</item>
        <item name="color_windows_background">#FF000000</item>
        <item name="text_high">@color/dark_text_high</item>
        <item name="text_medium">@color/dark_text_medium</item>
        <item name="text_hint">@color/dark_text_hint</item>
        <item name="text_error">@color/dark_text_error</item>
        <item name="btn_text_color">@color/dark_btn_text_color</item>
        <item name="icon_color">#FFF5F5F5</item>
        <item name="toolbar_theme">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="toolbar_icon_color">#FFFEFEFE</item>
        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>
        <item name="android:textColorSecondary">?attr/text_medium</item>
        <item name="android:textColorPrimary">?attr/text_high</item>
        <item name="alertDialogTheme">@style/DarkAlertDialog</item>
    </style>

