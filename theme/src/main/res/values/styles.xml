        <item name="dialog_button_color">@color/whiteColorAccent</item>
        <item name="android:textColorSecondary">?attr/text_medium</item>
        <item name="android:textColorPrimary">?attr/text_high</item>
    </style>

    <style name="LightAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/DialogTextButton</item>
    </style>

    <style name="DarkAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/DialogTextButton</item>
    </style>

    <style name="DialogTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">?attr/dialog_button_color</item>
        <item name="rippleColor">?attr/dialog_button_color</item>
    </style>

    <style name="MD_Dialog_Input_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="android:textColorHint">?attr/text_hint</item>
        <item name="hintTextColor">?attr/colorAccent</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MD_Dialog_Input_Layout.Message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/text_high</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">?attr/colorAccent</item>
        <item name="android:textSize">16sp</item>
